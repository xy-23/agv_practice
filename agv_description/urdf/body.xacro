<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <!-- BASE -->

    <link name="base_link"></link>

    <!-- CHASSIS -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <!-- <origin xyz="0 0 0.4"/> -->
            <!-- <pose>0 0 0 0 0 0</pose> -->
            <geometry>
                <mesh filename="package://agv_description/mesh/agv.dae"/>
                <scale>0.0001 0.0001 0.0001</scale>
                
            </geometry>
            <material name="white"/>
        </visual>
        <!-- <collision>
            <origin xyz="0 0 0.4"/>
            <geometry>
                <box size="1 0.52 0.7"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="10" x="1" y="0.52" z="0.7">
            <origin xyz="0 0 0.4" rpy="0 0 0"/>
        </xacro:inertial_box> -->
    </link>

    <!-- LEFT WHEEL -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.192 0.075" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="2" length="0.05" radius="0.075">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.192 0.075" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.075" length="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="2" length="0.05" radius="0.075">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER WHEEL -->

    <joint name="caster_left_front_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_left_front_wheel"/>
        <origin xyz="0.3 0.15 0.06"/>
    </joint>

    <link name="caster_left_front_wheel">
        <visual>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="1" radius="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <joint name="caster_right_front_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_right_front_wheel"/>
        <origin xyz="0.3 -0.15 0.06"/>
    </joint> 

    <link name="caster_right_front_wheel">
        <visual>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="1" radius="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <joint name="caster_left_back_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_left_back_wheel"/>
        <origin xyz="-0.3 0.15 0.06"/>
    </joint>

    <link name="caster_left_back_wheel">
        <visual>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="1" radius="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <joint name="caster_right_back_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_right_back_wheel"/>
        <origin xyz="-0.3 -0.15 0.06"/>
    </joint>


    <link name="caster_right_back_wheel">
        <visual>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="1" radius="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

</robot> 